using System;
using System.Drawing;
using System.Windows.Forms;

namespace WindowsFormsApp1
{
    public partial class Form1 : Form
    {
        private Label labelMessage;

        public Form1()
        {
            InitializeComponent();
            InitializeLabel();
        }

        private void InitializeLabel()
        {
 
            labelMessage = new Label();
            labelMessage.Name = "labelMessage";
            labelMessage.Text = "Welcome to the Application!";
            labelMessage.Font = new Font("Arial", 12, FontStyle.Bold);
            labelMessage.Location = new Point(10, 10); 
            labelMessage.AutoSize = true; 


            this.Controls.Add(labelMessage);
        }

        private void Form1_Load(object sender, EventArgs e)
        {

            labelMessage.Text = "Computer Science Student...";
        }
    }
}
